@model DataAutos.Models.Persona
@{
	ViewBag.Title = "Create";
}
<h2>Create</h2>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-beta1/jquery.js"></script>
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>Persona</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			@Html.LabelFor(model => model.per_nombre, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.per_nombre, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.per_nombre, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.per_edad, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.per_edad, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.per_edad, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Guardar" class="btn btn-default" />
			</div>
		</div>
	</div>
	<div>
		<table class="table" id="tablita">

			<tr>
				<th>Placa</th>
				<th>Modelo</th>
				<th>Color</th>
			</tr>
			
		</table>
	</div>
}
<div class="btn-der">

	<button id="adicional" name="adicional" type="button" class="btn btn-warning" onclick="appendText()">Mas+ </button>
</div>


<script>
	var posicion = 0;
	function appendText() {
		var form1 = document.createElement("tr");
		form1.innerHTML = '<td><input type="text" class="form - control" id="placa" name="Auto[' + posicion + '].aut_placa"></td>' + '<td><input type="text" class="form - control" id="modelo" name="Auto[' + posicion + '].aut_modelo"></td>' + '<td><input type="text" class="form - control" id="color" name="Auto[' + posicion + '].aut_color"></td>';
		posicion++;
		$("#tablita").append(form1);
	}
</script>
@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}